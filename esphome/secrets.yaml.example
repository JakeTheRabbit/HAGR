# ESPHome Secrets Template
# Copy this file to secrets.yaml and fill in your actual values

# WiFi Configuration
wifi_ssid: "YourWiFiNetworkName"
wifi_password: "YourWiFiPassword"

# API Encryption Key (32 characters)
# Generate with: esphome wizard or openssl rand -hex 32
api_encryption_key: "your-32-character-api-encryption-key-here"

# OTA Update Password
# Use a strong password for over-the-air updates
ota_password: "your-secure-ota-password-here"

# Example values:
# wifi_ssid: "MyHomeNetwork"
# wifi_password: "MySecurePassword123"
# api_encryption_key: "z57E3mGa/SZalax8NYYbKxkOlGGwbPEEBLYPPsbl0yw="
# ota_password: "MySecureOTAPassword456"